---
import { Image } from "astro:assets";
import { fetchFromAPI, STRAPI_BASE_URL } from "../lib/conection.ts"; // aca se importa la función

const data = await fetchFromAPI('acerca-de'); // Datos del Single Type: Acerca de
---
<!-- Hero -->
<section class="py-12 bg-linear-to-r from-blue-800 to-blue-400 text-white">
    <div class="container mx-auto px-4 text-center">
        <h1 class="text-3xl sm:text-4xl md:text-5xl font-bold mb-4">{data.titulo}</h1>
        <p class="text-lg sm:text-xl md:text-2xl max-w-3xl mx-auto">{data.descripcion}</p>
    </div>
</section>

<!-- ¿Quienes Somos? -->
<section class="py-12 bg-gray-100">
    <div class="container mx-auto px-4">
        <div class="flex flex-col lg:flex-row items-center gap-12">
            <!-- Imagen -->
            <div class="lg:w-1/2">
                <Image 
                    src={`${STRAPI_BASE_URL}${data.imagen.url}` || ''}
                    alt="acerca de"
                    class="rounded-lg shadow-md w-full"
                    inferSize={true}
                />
            </div>

            <div class="lg:w-1/2">
                <h2 class="text-3xl font-bold text-gray-800 mb-6">{data.titulo2}</h2>
                <p class="text-gray-600 mb-6">{data.descripcion2}</p>
            </div>
        </div>
    </div>
</section>

<!-- Nuestra Historia -->
<section class="py-12 bg-linear-to-r from-blue-400">
    <div class="container mx-auto px-4">
        <div class="flex flex-col lg:flex-row-reverse items-center gap-12">
            <div class="lg:w-1/2">
                <Image 
                    src={`${STRAPI_BASE_URL}${data.imagen2.url}` || ''}
                    alt="acerca de"
                    class="rounded-lg shadow-md w-full"
                    inferSize={true}
                />
            </div>

            <div class="lg:w-1/2">
                <h2 class="text-3xl font-bold text-white mb-6">{data.titulo3}</h2>
                <p class="text-white mb-6">{data.descripcion3}</p>
            </div>
        </div>
    </div>
</section>

<!-- Nuestros Valores -->
<section class="py-12 bg-gray-100">
    <div class="container mx-auto px-4">
        <div class="flex flex-col lg:flex-row items-center gap-12">
            <div class="lg:w-1/2">
                <Image 
                    src={`${STRAPI_BASE_URL}${data.imagen3.url}` || ''}
                    alt="acerca de"
                    class="rounded-lg shadow-md w-full"
                    inferSize={true}
                />
            </div>

            <div class="lg:w-1/2">
                <h2 class="text-3xl font-bold text-gray-800 mb-6">{data.titulo4}</h2>
                <p class="text-gray-600 mb-6">{data.descripcion4}</p>
            </div>
        </div>
    </div>
</section>